@{
    //不使用布局页
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>登录</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/theme.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body class="login-page">
    <div class="login-body">


        <div class="login-info">
            <a href="#" class="logo">易飞WEB与后端</a>

            <div class="slogan">演示</div>
            <ul>
                <li><a href="#"><i class="fa fa-file-text-o signin-icon"></i> 帮助手册</a></li>
                <li><a href="#"><i class="fa fa-money signin-icon"></i> 桌面端下载</a></li>
                <li><a href="#"><i class="fa fa-laptop signin-icon"></i> 安卓端下载</a></li>
                <li><a href="#"><i class="fa fa-download signin-icon"></i> iOS下载</a></li>
            </ul>
        </div>
        <div class="login-form">
            <form autocomplete="off" method="post" id="form">
                <div class="signin-text">
                    <span class="ng-binding">请输入您的登录信息</span>
                </div>
                <div class="alert alert-danger hide">
                </div>
                <div class="form-group input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <input type="text" name="username" class="form-control" style="height: 42px;padding: 0 10px">
                </div>
                <div class="form-group input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <input type="password" name="password" class="form-control" style="height: 42px;padding: 0 10px">
                </div>
                <div class="form-actions">
                    <button class="btn btn-primary btn-block" type="submit">登录</button>
                </div>
            </form>
            <div class="signin-with">
                Present by <a href="https://www.yuexiangxinxi.com" target="_blank">by 挑灯看剑 QQ:691415</a> © 2015
            </div>
        </div>
    </div>
</body>
<script>
    $(function () {
        $('#form').submit(function (e) {
            e.preventDefault();
            $.post('/home/login', $('#form').serialize(), function (data) {
                if (data.status) {
                    $('.alert').addClass('hide');
                    window.location.href = '/home/index';
                } else {
                    $('.alert').removeClass('hide');
                    $('.alert').text(data.info);
                }
            }, 'json');
        });
    });
</script>
</html>

